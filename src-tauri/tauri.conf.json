{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Attention Screen",
  "version": "0.1.39",
  "identifier": "com.frweed.attentionscreen",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      { 
        "label": "main",
        "title": "Attention",
        "width": 900,
        "height": 500,
        "resizable": true,
        "decorations": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "nsis"],

    "macOS": {
      "signingIdentity": "Developer ID Application: Frweed LLC (LTZ9N3WC9T)",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    },

    "icon": [
      "icons/attention-icon-32.png",
      "icons/attention-icon-64.png",
      "icons/attention-icon-128.png",
      "icons/attention-icon-256.png",
      "icons/attention-icon-512.png",
      "icons/attention-icon-1024.png",
      "icons/attention-icon.ico",
      "icons/attention-icon.icns"
    ]
  }
}
